<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="dark_theme1">@color/white</item>
        <item name="dark_theme2">@color/textColor</item>
        <item name="dark_theme3">@color/textColor</item>
        <item name="dark_theme4">@color/white</item>
        <item name="dark_theme5">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Dark">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="dark_theme1">@color/black</item>
        <item name="dark_theme2">@color/white</item>
        <item name="dark_theme3">@color/textColor</item>
        <item name="dark_theme4">@color/white</item>
        <item name="dark_theme5">@color/listColor</item>
    </style>

</resources>
